{  PROJECT: Transmitter  PLATFORM: Parallax Project USB Board  REVISION: 2  AUTHOR: Clement Low  DATE: 170222  LOG:        170222 Created the Logic on Transmitter        240222 Implemented input for Direction and Speed}CON        _clkmode = xtal1 + pll16x                                               'Standard clock mode * crystal frequency = 80 MHz        _xinfreq = 5_000_000        '_ConClkFreq = ((_clkmode - xtal1) >> 6 ) * _xinfreq        '_Ms_001 = _ConClkFreq / 1_000        commStart = $7A        commEnd   = $7BVAR  long _Ms_001  long cogCommID, cogStack[32]OBJ  Comm      : "FullDuplexSerial.spin"PUB Start(MSVal, Direction, Speed)  _Ms_001 := MSVal  cogCommID := cognew(Transmitter(Direction, Speed), @cogStack)PUB Transmitter(Direction, Speed)| CheckSum  Comm.Start(24, 25, 0, 57600)  Pause(500)    Comm.Tx(commStart)    Pause(50)    Comm.Tx(Direction)    Pause(50)    Comm.Tx(Speed)    Pause(50)    CheckSum := (Direction ^ Speed) ^ $7F    Pause(100)    Comm.Tx(CheckSum)    Pause(50)    Comm.Tx(commEnd)PRI Pause(ms) | t  t := cnt - 1088  repeat (ms#>0)    waitcnt(t+=_MS_001)return